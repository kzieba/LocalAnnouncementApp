{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Announcement</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Expirationtime</th>
                <td>{{ entity.expirationTime.timestamp }}</td>
            </tr>
        </tbody>
    </table>

    {% if entity.photo %}
    <img src="http://192.168.33.22:8000/{{ entity.photo.pathToFile }}" alt="{{ entity.photo.altText }}" height="100" width="100">
    {% else %}
        <p>There is no image for this annoucement yet!</p>
    {% endif %}

    <ul class="record_actions">
    <li>
        <a href="{{ path('announcement') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('announcement_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
